<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/cv_2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_informasi"
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cloud_off_24dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:contentDescription="@string/foto_informasi" />
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/img_informasi"
                android:layout_toRightOf="@id/img_informasi"
                android:text="Judul"
                android:maxLines="1"
                android:textSize="20sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/ic_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="26dp"
                android:layout_toRightOf="@id/img_informasi"
                android:src="@drawable/ic_date_24dp" />
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ic_tanggal"
                android:text="15-11-2019"
                android:layout_toEndOf="@id/ic_tanggal"
                android:layout_marginStart="10dp" />
            <TextView
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_below="@id/txt_date"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="26dp"
                android:layout_toRightOf="@id/img_informasi"
                android:text="Konten"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toEndOf="@id/img_informasi"
                android:layout_marginStart="26dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>