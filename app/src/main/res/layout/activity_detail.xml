<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learn.madingapp.DetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_informasi_detail"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:contentDescription="Foto"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_cloud_off_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_title_detail"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Judul"
            android:textSize="27sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_informasi_detail" />

        <ImageView
            android:id="@+id/icon_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_date_24dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_date_detail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txt_title_detail"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_detail"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_date_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="23-07-2020"
            app:layout_constraintStart_toStartOf="@+id/txt_title_detail"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_detail" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_date_24dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_date_detail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txt_title_detail"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_detail"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_theme_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="Tema"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_detail"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_theme_24dp"
            app:layout_constraintStart_toEndOf="@+id/txt_date_detail"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_detail"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_content_detail"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            android:text="Konten"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_title_detail"
            app:layout_constraintTop_toBottomOf="@+id/txt_date_detail" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_edit_24dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_author_detail"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/txt_content_detail"
            app:layout_constraintTop_toBottomOf="@+id/txt_content_detail"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_author_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_goneMarginEnd="@dimen/activity_horizontal_margin"
            android:text="Anis Hidayat"
            app:layout_constraintStart_toStartOf="@+id/txt_content_detail"
            app:layout_constraintTop_toBottomOf="@+id/txt_content_detail" />

        <ImageView
            android:id="@+id/icon_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_pdf_24dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_file_detail"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txt_author_detail"
            app:layout_constraintTop_toBottomOf="@+id/txt_content_detail"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_file_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="16dp"
            android:text="Link File"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/txt_author_detail"
            app:layout_constraintTop_toBottomOf="@+id/txt_content_detail"
            app:layout_goneMarginEnd="@dimen/activity_horizontal_margin" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
